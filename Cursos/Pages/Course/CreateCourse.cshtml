@page
@model Cursos.Pages.Course.CreateCourseModel
@{
    ViewData["Title"] = "Create Course";
}


<h2 class="h2 text-center mb-2 animate__animated animate__backInDown ">Create your Courses✨</h2>
<div class="container" >
    <form method="post">
        <div class="form-group animate__animated animate__backInUp ">
            <label>Unique Identifier:</label>
            <input type="text" asp-for="Course.IdCourse" class="form-control" />
        </div>
        <div class="form-group animate__animated animate__backInUp ">
            <label>Name Course:</label>
            <input type="text" asp-for="Course.Name" class="form-control" />
            <span asp-validation-for="Course.Name" class="text-danger" ></span>
        </div>
        <div class="form-group animate__animated animate__backInUp">
            <label>Quantity Of The Course:</label>
            <input type="number" asp-for="Course.QuantityCourse" class="form-control" />
            <span asp-validation-for="Course.QuantityCourse" class="text-danger" ></span>
        </div>
        <input type="submit" class="btn btn-block btn-success mt-3 animate__animated animate__backInUp " value="Add Course" />
    </form>
</div>
