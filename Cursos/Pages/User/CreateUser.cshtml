@page
@using Entity
@using Business
@model Cursos.Pages.User.CreateUserModel
@{
    ViewData["Title"] = "Create Students";
    List<CourseEntity> Courses = new List<CourseEntity>();
    Courses = B_Course.CourseList();
}

<h2 class="h2 text-center mb-2 animate__animated animate__backInDown ">Create your students associated with a Courses✨</h2>
<div class="container  ">
    <form method="post">
        <div class="form-group animate__animated animate__backInUp ">
            <label>Unique Identifier:</label>
            <input type="text" asp-for="Student.IdUser" class="form-control" />
            <span asp-validation-for="Student.IdUser" class="text-danger "></span>
        </div>
        <div class="form-group animate__animated animate__backInUp ">
            <label>Name Student:</label>
            <input type="text" asp-for="Student.Name" class="form-control" />
            <span asp-validation-for="Student.Name" class="text-danger "></span>
        </div>
        <div class="form-group animate__animated animate__backInUp ">
            <label>lastName Student:</label>
            <input type="text" asp-for="Student.LastName" class="form-control" />
            <span asp-validation-for="Student.LastName" class="text-danger "></span>
        </div>
        <div class="form-group animate__animated animate__backInUp ">
            <label>References Of the Courses:</label>
            <select asp-for="Student.CourseId" class="form-control">
                <option value="0"> Select an Option... </option>
                @foreach (var course in Courses)
                {
                    <option value="@course.IdCourse">@course.Name </option>
                }
            </select>
            <span asp-validation-for="Student.CourseId" class="text-danger "></span>
        </div>
        <input type="submit" class="btn btn-block btn-success mt-3 animate__animated animate__backInUp " value="Add Student" />
    </form>
</div>